pipeline {
  agent any
  tools {
    maven 'maven'
  }
  stages {
    stage("build jar") {
      steps {
        script{
          echo "building the application..."
          sh 'mvn package'
        }
      }
    }
    stage("build iamge") {
      steps {
        script{
          echo "building the docker image..."
          withCredentials([usernamePassword(creadentialsId: 'dockerhub-repo', usernameVariable: 'USER', passwordVariable: 'PASS')]) {
            sh 'docker build -t dinhtuan2306/demo-java-maven-app:2.0 .'
            sh 'echo $PASS | docker login -u $USER --password-stdin'
            sh 'docker push dinhtuan2306/demo-java-maven-app:2.0'
          }
        }
      }
    }
    stage("deploy") {
      steps {
        script{
          echo "deploying the application..."
        }
      }
    }
  }
}
    
